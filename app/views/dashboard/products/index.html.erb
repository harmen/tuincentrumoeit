<body>
	<section id="header">
			<div id="navbar">
					<a href="/">Home</a>
					<%= link_to dashboard_products_url do %>Product overzicht<% end %>
					<%= link_to edit_user_registration_url, class: "active" do %>Dashboard<% end %>

					<div class="gebruiker">
							<a class="nav-link disabled" href="#" >Ingelogd als</a>
							<a class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<%= current_user.name %>
							</a>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
									<a class="dropdown-item black" href="<%= destroy_user_session_url %>">Uitloggen</a>

							</div>
					</div>
			</div>
	</section>
<section id="table">
	<div class="container">
        <button type="button" class="btn btn-primary new">Voeg nieuw product toe</button>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Productnaam</th>
                <th scope="col">Product ID</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
						<% @products.each do |product| %>
                            
                                <tr>
                                    <%= link_to dashboard_product_url(product.id) do %><th scope="row"><%= product.id %></th><% end %>
                                    <td><%= product.name %></td>
                                    <td><%= product.description %></td>
                                    <td><a class="delete" href="#" type="button"><i class="material-icons">
                                            delete
                                    </i></a> <a class="edit" href="#" type="button" data-toggle="modal" data-target="#editModal"><i class="material-icons">
                                            brush
                                    </i></a></td>
                                </tr>
						<% end %>
            </tbody>
        </table>
    </div>
</section>

<section id="modal">


    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Wijzig product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <label for="productId">Product naam</label>
                    <input type="email" class="form-control" id="productId" aria-describedby="idHelp">
                    <small id="idHelp" class="form-text text-muted">Pas het product ID aan</small>

                    <label for="productNaam">Product Naam</label>
                    <input type="email" class="form-control" id="productNaam" aria-describedby="naamHelp">
                    <small id="naamHelp" class="form-text text-muted">Pas de productnaam aan</small>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


</section>